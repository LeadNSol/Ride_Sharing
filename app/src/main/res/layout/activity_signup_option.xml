<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    tools:context=".ui.SignupOptionActivity">

    <Button
        android:id="@+id/btn_rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lightRed"
        android:padding="10dp"
        android:onClick="onRiderClick"
        android:text="I am Rider"
        android:textColor="@color/DarkRed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_driver"
        app:layout_constraintStart_toStartOf="@+id/btn_driver"
        app:layout_constraintTop_toBottomOf="@+id/btn_driver" />

    <Button
        android:id="@+id/btn_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lightRed"
        android:padding="10dp"
        android:onClick="onDriverClick"
        android:text="I am Driver"
        android:textColor="@color/DarkRed"
        app:layout_constraintBottom_toTopOf="@+id/btn_rider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>